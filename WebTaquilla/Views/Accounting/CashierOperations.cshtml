                                            <div>
                                                <label for="inputMontoTotalGiveMixed" class="col-form-label">Se Hizo Entrega de </label>
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div>
                                                <input id="MontoTotalGiveMixed" name="MontoTotalGiveMixed" type="text" class="form-control montos" readonly />
                                            </div>
                                        </div>
                                    </div>
