                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div>
                                                <input id="MontoTotalBsMixed" name="MontoTotalBsMixed" type="text" class="form-control montos" readonly />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group row col-md-12">
                                    <div id="divMontoTotalPayMixed" style="display:none">
                                        <div class="col-md-1">
                                            <div>
                                                <label for="inputMontoTotalPayMixed" class="col-form-label">Equivalente a </label>
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div>
                                                <input id="MontoTotalPayMixed" name="MontoTotalPayMixed" type="text" class="form-control montos" readonly />
                                            </div>
                                        </div>
                                    </div>
                                    <div id="divTasaMixed" style="display:none">
                                        <div class="col-md-1">
                                            <div>
                                                <label for="inputMontoTotalBsMixed" class="col-form-label">Tasa del Dia</label>
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div>
                                                <input id="TasaMixed" name="TasaMixed" type="text" class="form-control montos" readonly />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
             </div>
        </div>
    </div>
</div>

