<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Buscar Ordenes Anulables</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                Caja
            </li>
            <li class="breadcrumb-item active">
                Cajero
            </li>
            <li class="breadcrumb-item active">
                <strong>Anulaciones</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="widget style1 lazur-bg">
            En esta vista se cargan las Ordenes Anulables
        </div>
    </div>
</div>

<div id="">
    <form id="formCashierAnnulmentRequest">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="">Tipo de Documento</label>
                <select asp-items="ViewBag.ListaTiposDeIdentidad" id="clienteTipo" name="clienteTipo" class="form-control"></select>
            </div>
            <div class="form-group col-md-3">
                <label for="validationDefault01">Número de Identificación</label>
                <input type="text" class="form-control" placeholder="Número de Identificación" maxlength="15" onfocus="onlyNumber(this.id)" autocomplete="off" aria-label="Number" aria-describedby="basic-addon1" name="Number" id="Number">
            </div>
            <div class="form-group col-md-3">
                <label for="validationCustom03">Número de Orden</label>
                <input type="text" class="form-control" id="IdOrden" name="IdOrden" onfocus="onlyNumber(this.id)" autocomplete="off">
            </div>
            <div class="form-group col-md-1">
                <button id="btnSearchCashierAnnul" style="text-align: center;margin-top: 30%;" class="btn btn-primary" onclick="SearchCashierOperationsAnnulment()"> Buscar </button>
            </div>
        </div>
    </form>
</div>

<div id="AvailableOperationsAnnulment">
    <div id="divAvailableOperationsAnnulment">
        <div class="panel-body">
            <div class="ibox">
                <div class="ibox-content">
                    <div>
                        <table id="TbAvailableOperationsAnnulment"
                               data-toggle="table"
                               data-search="true"
                               data-show-refresh="true"
                               data-side-pagination="server"
                               data-response-handler="responseHandler"
                               data-advanced-search="true"
                               data-page-size="10"
                               data-id-table="advancedTable"
                               data-ajax=""
                               class="table table-striped table-bordered table-responsive-lg">
                            <thead>
                                
                                <tr>
                                    <th data-field="operate" data-formatter="operateFormatter" data-events="operateEvents" data-halign="center" data-align="center">Acciones</th>
                                    <th data-field="ID_ORDEN" data-sortable="true" data-halign="center" data-align="center">
                                        Nro. Orden
                                    </th>
                                    <th data-field="CLIENTE" data-sortable="true" data-halign="center" data-align="center">
                                        Cliente
                                    </th>
                                    <th data-field="IDENTIFICACION_REMITENTE" data-sortable="true" data-halign="center" data-align="center">
                                        Número de Documento
                                    </th>
                                    <th data-field="TIPO_MOVIMIENTO" data-sortable="true" data-halign="center" data-align="center">
                                        Operación
                                    </th>
                                    <th data-field="MONEDA" data-sortable="true" data-halign="center" data-align="center">
                                        Tipo Moneda
                                    </th>
                                    <th data-field="MONTO" data-sortable="true" data-halign="center" data-align="center">
                                        Monto
                                    </th>
                                    <th data-field="FECHA_OPERACION" data-formatter="convertDate" data-sortable="true" data-halign="center" data-align="center">
                                        Fecha de Operación
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_modalOperationAnnulment" />

@section Scripts{
    <script src="~/WebTaquilla/Operaciones/CashierAnnulment.js" asp-append-version="true"></script>
}