<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Buscar Operaciones de Negocio Anulables</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                Operaciones de Negocio
            </li>
            <li class="breadcrumb-item active">
                <strong>Anulaciones</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="widget style1 lazur-bg">
            En esta vista se cargan las Operaciones de Negocio Anulables
        </div>
    </div>
</div>

<div id="">
    <form id="formOperationsTempAnnulmentRequest">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="">Tipo de Documento</label>
                <select asp-items="ViewBag.ListaTiposDeIdentidad" id="clienteTipo" name="clienteTipo" class="form-control"></select>
            </div>
            <div class="form-group col-md-3">
                <label for="validationDefault01">Número de Identificación</label>
                <input type="text" class="form-control" placeholder="Número de Identificación" maxlength="15" onfocus="onlyNumber(this.id)" autocomplete="off" aria-label="Number" aria-describedby="basic-addon1" name="Number" id="Number">
            </div>
            <div class="form-group col-md-1">
                <button id="btnSearchOpTempAnnul" style="text-align: center;margin-top: 30%;" class="btn btn-primary" onclick="SearchOperationsTempAnnulment()"> Buscar </button>
            </div>
        </div>
    </form>
</div>

<div id="AvailableOperationsTempAnnulment">
    <div id="divOperationsTempAnnulment">
        <div class="panel-body">
            <div class="ibox">
                <div class="ibox-content">
                    <div>
                        <table id="TbAvailableOperationsTempAnnulment"
                               data-toggle="table"
                               data-search="true"
                               data-show-refresh="true"
                               data-url=""
                               data-side-pagination="server"
                               data-response-handler="responseHandler"
                               data-advanced-search="true"
                               data-page-size="10"
                               data-id-table="advancedTable"
                               data-ajax=""
                               class="table table-striped table-bordered table-responsive-lg">
                            <thead>
                                <tr>
                                    <th data-field="operate" data-formatter="operateFormatter" data-events="operateEvents" data-halign="center" data-align="center">Acciones</th>
                                    <th data-field="NOMREM" data-sortable="true" data-halign="center" data-align="center">
                                        Cliente
                                    </th>
                                    <th data-field="CIREM" data-sortable="true" data-halign="center" data-align="center">
                                        Número de Documento
                                    </th>
                                    <th data-field="DetalleOperacion" data-formatter="OperacionDescripcion" data-sortable="true" data-halign="center" data-align="center">
                                        Operación
                                    </th>
                                    <th data-field="Moneda" data-sortable="true" data-halign="center" data-align="center">
                                        Tipo Moneda
                                    </th>
                                    <th data-field="Dolares" data-sortable="true" data-formatter="OperacionMontoRecibir" data-halign="center" data-align="center">
                                        Monto a Recibir
                                    </th>
                                    <th data-field="Total_Cobrar" data-sortable="true" data-formatter="OperacionMontoPagar" data-halign="center" data-align="center">
                                        Monto a Entregar
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_modalOperationAnnulment" />

@section Scripts{
    <script src="~/WebTaquilla/Operaciones/OperationsTempAnnulment.js" asp-append-version="true"></script>
}
